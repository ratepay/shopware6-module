<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Ratepay\RatepayPayments\Components\OrderManagement\Controller\ProductPanel">
            <argument id="order.repository" type="service"/>
            <argument id="Ratepay\RatepayPayments\Components\RatepayApi\Services\Request\PaymentDeliverService" type="service"/>
            <argument id="Ratepay\RatepayPayments\Components\RatepayApi\Services\Request\PaymentReturnService" type="service"/>
            <argument id="Ratepay\RatepayPayments\Components\RatepayApi\Services\Request\PaymentCancelService" type="service"/>
            <call method="setContainer">
                <argument id="service_container" type="service"/>
            </call>
            <tag name="controller.service_arguments"/>
        </service>

    </services>

</container>
