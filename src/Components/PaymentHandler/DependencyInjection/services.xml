<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="Ratepay\RatepayPayments\Components\PaymentHandler\InvoicePaymentHandler">
            <argument type="service" id="Shopware\Core\Checkout\Order\Aggregate\OrderTransaction\OrderTransactionStateHandler"/>
            <argument type="service" id="order.repository"/>
            <argument id="Ratepay\RatepayPayments\Components\RatepayApi\Services\Request\PaymentRequestService" type="service"/>
            <tag name="shopware.payment.method.sync"/>
        </service>

        <service id="Ratepay\RatepayPayments\Components\PaymentHandler\DebitPaymentHandler">
            <argument type="service" id="Shopware\Core\Checkout\Order\Aggregate\OrderTransaction\OrderTransactionStateHandler"/>
            <argument type="service" id="order.repository"/>
            <argument id="Ratepay\RatepayPayments\Components\RatepayApi\Services\Request\PaymentRequestService" type="service"/>
            <tag name="shopware.payment.method.sync"/>
        </service>

        <service id="Ratepay\RatepayPayments\Components\PaymentHandler\PrepaymentPaymentHandler">
            <argument type="service" id="Shopware\Core\Checkout\Order\Aggregate\OrderTransaction\OrderTransactionStateHandler"/>
            <argument type="service" id="order.repository"/>
            <argument id="Ratepay\RatepayPayments\Components\RatepayApi\Services\Request\PaymentRequestService" type="service"/>
            <tag name="shopware.payment.method.sync"/>
        </service>

        <service id="Ratepay\RatepayPayments\Components\PaymentHandler\InstallmentPaymentHandler">
            <argument type="service" id="Shopware\Core\Checkout\Order\Aggregate\OrderTransaction\OrderTransactionStateHandler"/>
            <argument type="service" id="order.repository"/>
            <argument id="Ratepay\RatepayPayments\Components\RatepayApi\Services\Request\PaymentRequestService" type="service"/>
            <tag name="shopware.payment.method.sync"/>
        </service>

        <service id="Ratepay\RatepayPayments\Components\PaymentHandler\InstallmentZeroPercentPaymentHandler">
            <argument type="service" id="Shopware\Core\Checkout\Order\Aggregate\OrderTransaction\OrderTransactionStateHandler"/>
            <argument type="service" id="order.repository"/>
            <argument id="Ratepay\RatepayPayments\Components\RatepayApi\Services\Request\PaymentRequestService" type="service"/>
            <tag name="shopware.payment.method.sync"/>
        </service>

        <service id="Ratepay\RatepayPayments\Components\PaymentHandler\PaymentHelper">
        </service>


    </services>
</container>
