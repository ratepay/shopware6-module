<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <defaults autowire="true">
            <bind key="$profileConfigRepository" id="ratepay_profile_config.repository" type="service"/>
        </defaults>

        <service id="Ratepay\RpayPayments\Components\RatepayApi\Service\Request\PaymentRequestService"/>
        <service id="Ratepay\RpayPayments\Components\RatepayApi\Service\Request\PaymentDeliverService"/>
        <service id="Ratepay\RpayPayments\Components\RatepayApi\Service\Request\PaymentReturnService"/>
        <service id="Ratepay\RpayPayments\Components\RatepayApi\Service\Request\PaymentCancelService"/>
        <service id="Ratepay\RpayPayments\Components\RatepayApi\Service\Request\PaymentCreditService"/>
        <service id="Ratepay\RpayPayments\Components\RatepayApi\Service\Request\PaymentInitService"/>

    </services>
</container>
