<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <defaults>
            <bind key="$profileConfigRepository" id="ratepay_profile_config.repository" type="service" />
        </defaults>

        <service id="Ratepay\RatepayPayments\Components\RatepayApi\Services\Request\ProfileRequestService" autowire="true" />
        <service id="Ratepay\RatepayPayments\Components\RatepayApi\Services\Request\PaymentRequestService" autowire="true"/>
        <service id="Ratepay\RatepayPayments\Components\RatepayApi\Services\Request\PaymentDeliverService" autowire="true"/>
        <service id="Ratepay\RatepayPayments\Components\RatepayApi\Services\Request\PaymentReturnService" autowire="true"/>
        <service id="Ratepay\RatepayPayments\Components\RatepayApi\Services\Request\PaymentCancelService" autowire="true"/>
        <service id="Ratepay\RatepayPayments\Components\RatepayApi\Services\Request\PaymentCreditService" autowire="true"/>
        <service id="Ratepay\RatepayPayments\Components\RatepayApi\Services\Request\PaymentDebitService" autowire="true"/>

    </services>
</container>
