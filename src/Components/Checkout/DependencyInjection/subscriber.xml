<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <defaults>
            <tag name="kernel.event_subscriber"/>
        </defaults>

        <service id="Ratepay\RatepayPayments\Components\Checkout\Subscriber\CheckoutSubscriber" public="true">
            <argument type="service" id="Ratepay\RatepayPayments\Components\Checkout\Service\ExtensionService" />
        </service>

        <service id="Ratepay\RatepayPayments\Components\Checkout\Subscriber\CheckoutValidationSubscriber">
            <argument type="service" id="Shopware\Core\Framework\Validation\DataValidator"/>
            <argument type="service" id="request_stack"/>
            <argument type="service" id="service_container"/>
        </service>

        <service id="Ratepay\RatepayPayments\Components\Checkout\Subscriber\PaymentFilterSubscriber" autowire="true" />

        <service id="Ratepay\RatepayPayments\Components\Checkout\Subscriber\PaymentFailedSubscriber">
            <argument type="service" id="ratepay_api_log.repository"/>
            <argument type="service" id="service_container"/>
        </service>

        <service id="Ratepay\RatepayPayments\Components\Checkout\Subscriber\UserDataSubscriber">
            <argument id="customer.repository" type="service"/>
            <argument id="order_address.repository" type="service"/>
            <argument id="customer_address.repository" type="service"/>
        </service>

    </services>

</container>
