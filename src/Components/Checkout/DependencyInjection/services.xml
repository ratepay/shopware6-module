<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Ratepay\RatepayPayments\Components\Checkout\Subscriber\CheckoutSubscriber" public="true">
            <argument type="service" id="Ratepay\RatepayPayments\Components\PaymentHandler\PaymentHelper"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="Ratepay\RatepayPayments\Components\Checkout\Subscriber\CheckoutValidationSubscriber">
            <argument type="service" id="Shopware\Core\Framework\Validation\DataValidator"/>
            <argument type="service" id="request_stack" />
            <tag name="kernel.event_subscriber"/>
        </service>

    </services>

</container>
