<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>

        <defaults>
            <tag name="kernel.event_subscriber"/>
        </defaults>

        <service id="Ratepay\RatepayPayments\Components\StateMachine\Subscriber\PaymentSuccessfulSubscriber" autowire="true">
        </service>

        <service id="Ratepay\RatepayPayments\Components\StateMachine\Subscriber\TransitionSubscriber" autowire="true">
            <argument key="$orderRepository" id="order.repository" type="service" />
            <argument key="$orderDeliveryRepository" id="order_delivery.repository" type="service" />
            <argument key="$logger" id="ratepay.logger" type="service" />
        </service>
    </services>
</container>
