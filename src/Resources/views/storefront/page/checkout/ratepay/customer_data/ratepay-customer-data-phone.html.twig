{% block ratepay_personal_data_phone %}

    <div class="form-row">
        <div class="form-group col-sm-12">
            <label class="form-label">
                {{ "account.personalPhoneLabel"|trans|sw_sanitize }}
            </label>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-sm-4">
            <input type="text" class="form-control" placeholder="{{ "account.personalPhonePlaceholder"|trans|sw_sanitize }}" value="{{ page.extensions.ratepay.phoneNumber }}" name="ratepay[phone]" form="confirmOrderForm">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-sm-12">
            {{ "ratepay.storefront.checkout.hints.legalText"|trans|sw_sanitize }}
        </div>
    </div>

{% endblock %}
