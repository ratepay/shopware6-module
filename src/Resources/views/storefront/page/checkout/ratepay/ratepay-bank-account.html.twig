{% block ratepay_personal_data_bank_account %}

    <div class="form-row">
        <div class="form-group col-sm-12">
            <label class="form-label">
                {{ "document.bankAccount"|trans|sw_sanitize }}
            </label>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-sm-12">
        <p>{{ "ratepay.storefront.checkout.hints.sepaLegalText"|trans|sw_sanitize }}</p>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-sm-4">
            <input type="text" class="form-control" id="rp-iban-account-holder" placeholder="{{ "ratepay.storefront.checkout.fields.accountholder"|trans|sw_sanitize }}" name="ratepay[accountholder]" form="confirmOrderForm" required="required">
        </div>
        <div class="form-group col-sm-4">
            <input type="text" class="form-control" id="rp-iban-account-number" placeholder="{{ "ratepay.storefront.checkout.fields.iban"|trans|sw_sanitize }}" name="ratepay[iban]" form="confirmOrderForm" required="required">
        </div>
        <div class="form-group col-sm-4" id="rp-form-bank-code" style="display:none;">
            <input type="text" class="form-control" id="rp-bank-code" placeholder="{{ "ratepay.storefront.checkout.fields.bic"|trans|sw_sanitize }}" name="ratepay[bic]" form="confirmOrderForm">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-sm-12">
            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="checkout-confirm-sepaconfirmation-checkbox custom-control-input" required="required" id="sepaconfirmation" form="confirmOrderForm" name="ratepay[sepaconfirmation]">
                <label for="sepaconfirmation" class="checkout-confirm-sepaconfirmation-label custom-control-label">
                    <p>{{ "ratepay.storefront.checkout.hints.sepaAuthorize"|trans|sw_sanitize }}</p>
                    <p>{{ "ratepay.storefront.checkout.hints.sepaAuthorizeNote"|trans|sw_sanitize }}</p>
                </label>
            </div>
        </div>
    </div>

{% endblock %}
