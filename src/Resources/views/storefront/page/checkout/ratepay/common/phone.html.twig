{% block ratepay_personal_data_phone %}

    <div class="form-row">
        <div class="form-group col-sm-12">
            <label class="form-label">
                <strong>{{ "account.personalPhoneLabel"|trans|sw_sanitize }}</strong>
            </label>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-sm-4">
            <input type="text"
                   class="form-control{% if formViolations.getViolations('/ratepay/phone') is not empty %} is-invalid{% endif %}"
                   placeholder="{{ "account.personalPhonePlaceholder"|trans|sw_sanitize }}" value="{{ page.extensions.ratepay.phoneNumber }}"
                   name="ratepay[phone]"
                   form="confirmOrderForm"
            >
        </div>
    </div>
{% endblock %}
