<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="Ratepay\RatepayPayments\Core\ProfileConfig\Service\ProfileConfigService">
            <argument id="payment_method.repository" type="service"/>
            <argument id="ratepay_profile_config.repository" type="service"/>
            <argument id="ratepay_profile_config_method.repository" type="service"/>
            <argument id="ratepay_profile_config_method_installment.repository" type="service"/>
            <argument id="Ratepay\RatepayPayments\Components\RatepayApi\Services\Request\ProfileRequestService"
                      type="service"/>
        </service>

        <service id="Ratepay\RatepayPayments\Core\PluginConfig\Services\ConfigService">
            <argument id="Shopware\Core\System\SystemConfig\SystemConfigService" type="service"/>
            <argument id="plugin.repository" type="service"/>
        </service>

        <service id="ratepay.logger" class="Monolog\Logger">
            <factory service="Shopware\Core\Framework\Log\LoggerFactory" method="createRotating"/>
            <argument type="string">ratepay</argument>
        </service>


        <!-- entities -->
        <service id="Ratepay\RatepayPayments\Core\ProfileConfig\ProfileConfigDefinition">
            <!--tag name="shopware.composite_search.definition"/-->
            <tag name="shopware.entity.definition" entity="ratepay_profile_config"/>
        </service>
        <service id="Ratepay\RatepayPayments\Core\ProfileConfig\ProfileConfigMethodDefinition">
            <!--tag name="shopware.composite_search.definition"/-->
            <tag name="shopware.entity.definition" entity="ratepay_profile_config_method"/>
        </service>
        <service id="Ratepay\RatepayPayments\Core\ProfileConfig\ProfileConfigMethodInstallmentDefinition">
            <!--tag name="shopware.composite_search.definition"/-->
            <tag name="shopware.entity.definition" entity="ratepay_profile_config_method_installment"/>
        </service>


        <!-- repositories -->
        <service id="Ratepay\RatepayPayments\Core\ProfileConfig\ProfileConfigRepository"
                 decorates="ratepay_profile_config.repository">
            <argument id="Ratepay\RatepayPayments\Core\ProfileConfig\ProfileConfigRepository.inner" type="service"/>
            <argument id="Ratepay\RatepayPayments\Components\RatepayApi\Services\Request\ProfileRequestService" type="service" />
        </service>

        <!-- Controller -->
        <service id="Ratepay\RatepayPayments\Core\ProfileConfig\Controller\ProfileConfigController">
            <argument id="Ratepay\RatepayPayments\Core\ProfileConfig\Service\ProfileConfigService" type="service"/>
            <tag name="controller.service_arguments" />
            <call method="setContainer">
                <argument id="service_container" type="service"/>
            </call>
        </service>


        <service id="Ratepay\RatepayPayments\Helper\SessionHelper" public="true">
        </service>

        <service id="Ratepay\RatepayPayments\Components\DeviceFingerprint\DfpService" public="true">
            <argument id="Ratepay\RatepayPayments\Helper\SessionHelper" type="service"/>
        </service>

        <service id="Ratepay\RatepayPayments\Storefront\Subscriber\RatepayStorefrontSubscriber" public="true">
            <tag name="kernel.event_subscriber"/>
            <argument id="Ratepay\RatepayPayments\Components\DeviceFingerprint\DfpService" type="service"/>
            <argument id="Ratepay\RatepayPayments\Helper\SessionHelper" type="service"/>
        </service>
        <!-- /Controller -->


    </services>
</container>
