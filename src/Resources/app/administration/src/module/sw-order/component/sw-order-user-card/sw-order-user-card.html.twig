{% block sw_order_detail_base_secondary_info_order_overview_right_column_slot %}
    <template v-if="currentOrder.extensions.ratepayData">
        <dt>{{ $tc('sw-order.detailBase.ratepay.transactionId') }}</dt>
        <dd>
            <router-link v-bind:to="{ name: 'ratepay.api.log.list', query: { term: currentOrder.extensions.ratepayData.transactionId } }"
                         ref="routerLink">
                {{ currentOrder.extensions.ratepayData.transactionId }}
            </router-link>
        </dd>
        <dt>{{ $tc('sw-order.detailBase.ratepay.descriptor') }}</dt>
        <dd>{{ currentOrder.extensions.ratepayData.descriptor }}</dd>
    </template>
{% endblock %}
