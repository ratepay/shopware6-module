<sw-card :title="$tc('ratepay.order-log-history.detailBase.ratepayHistoryPanelTitle')" positionIdentifier="ratepay-order-log-history">
        <sw-container slot="grid" type="row">
            <sw-entity-listing
                :items="entities"
                :repository="repository"
                :columns="columns"
                :fullPage="false"
                :showSettings="false"
                :showSelection="false"
                :showActions="false"
                :allowColumnEdit="false"
                :allowInlineEdit="false"
                :compactMode="true">

                <template #column-createdAt="{ item }">
                    {{ dateFilter(item.createdAt, { hour: '2-digit', minute: '2-digit' }) }}
                </template>

            </sw-entity-listing>
        </sw-container>
</sw-card>
