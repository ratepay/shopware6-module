{% block ratepay_profile_config_list %}
<sw-page class="ratepay-profile-config-list">
    {% block ratepay_profile_config_list_smart_bar_actions %}
    <template slot="smart-bar-actions">
        <sw-button variant="primary" :routerLink="{ name: 'ratepay.profileConfig.create' }">
            {{ $t('ratepay.profile_config.page.list.createButton') }}
        </sw-button>
    </template>
    {% endblock %}

    <template slot="content">
        {% block ratepay_profile_config_list_content %}
        <sw-entity-listing
            v-if="entities"
            :items="entities"
            :repository="repository"
            :showSelection="false"
            :columns="columns"
            detailRoute="ratepay.profileConfig.detail">

            <template slot="column-status" slot-scope="{ item }">
                <sw-color-badge color="red" v-if="item.status === false" ></sw-color-badge>
                <span v-if="item.status === false">&nbsp;&nbsp;{{ $t('ratepay.profile_config.global.labels.active') }}</span>
                <sw-color-badge color="green" v-if="item.status === true"></sw-color-badge>
                <span v-if="item.status === true">&nbsp;&nbsp;{{ $t('ratepay.profile_config.global.labels.inactive') }}</span>
            </template>

            <template slot="column-backend" slot-scope="{ item }">
                <sw-icon name="default-basic-checkmark-line" v-if="item.backend" ></sw-icon>
            </template>
        </sw-entity-listing>
        {% endblock %}
    </template>
</sw-page>
{% endblock %}
