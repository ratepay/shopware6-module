<sw-card :title="$tc('ratepay.order-log-history.detailBase.ratepayHistoryPanelTitle')">

        <sw-container slot="grid" type="row">
            <sw-entity-listing
                :items="entities"
                :repository="repository"
                :columns="columns"
                :fullPage="false"
                :showSettings="false"
                :showSelection="false"
                :showActions="false"
                :allowColumnEdit="false"
                :allowInlineEdit="false"
                :compactMode="true">

                <template slot="column-createdAt" slot-scope="{ item }">
                    {{ item.createdAt| date({hour: '2-digit', minute: '2-digit'}) }}
                </template>

            </sw-entity-listing>


        </sw-container>

</sw-card>
